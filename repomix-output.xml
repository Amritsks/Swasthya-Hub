      {/* Search Bar */}
      <div className="mb-10 max-w-lg mx-auto">
        <input
          type="text"
          placeholder="üîç Search medicine..."
          className="w-full p-3 rounded-xl border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition"
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target.value)}
        />
      </div>

      {/* Medicines Grid (horizontal items, vertical scroll) */}
      <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {filteredMedicines.length > 0 ? (
          filteredMedicines.map((medicine, index) => (
            <div
              key={index}
              className="bg-white shadow-md rounded-xl p-6 hover:shadow-2xl hover:scale-105 transform transition duration-200 cursor-pointer"
            >
              <h2 className="text-2xl font-bold text-teal-700">{medicine.name}</h2>
              <p className="text-sm text-gray-500 mt-2">
                üíä <span className="font-medium">{medicine.dosage}</span>
              </p>
              <p className="text-sm text-gray-700 mt-3 leading-relaxed">{medicine.steps}</p>
            </div>
          ))
        ) : (
          <p className="text-gray-500 text-center text-lg col-span-full">
            ‚ùå No medicines found.
          </p>
        )}
      </div>
    </div>
  );
};

export default Aushadhi;
