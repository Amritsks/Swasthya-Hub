      console.error(err);
    });
  }, [user]);

  useEffect(() => {
    if (!socket?.current) return;

    const currentSocket = socket.current;

    currentSocket.on("prescriptionConfirmed", (data) => {
      alert(data.message);
      setPrescriptions(prev =>
        prev.map(p =>
          p._id === data.prescriptionId
            ? {
                ...p,
                status: "confirmed",
                confirmation: {
                  allPresent: data.allPresent,
                  medicines: data.medicines || [],
                },
